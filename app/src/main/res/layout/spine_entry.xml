<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp">

                <TableRow
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_spine_title"
                        android:paddingStart="15dp"
                        android:paddingEnd="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:hint="@string/history_name_hint"
                        android:textSize="16sp"
                        android:textColor="@color/AF_BLUE"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:gravity="center"
                        android:id="@+id/edit_entry"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="3"
                        android:layout_marginEnd="3dp"
                        android:text="@string/history_button_edit"
                        android:textColor="@color/bg_main"
                        android:textSize="14sp"
                        android:background="@drawable/calculate_button_pressed"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:gravity="center"
                        android:id="@+id/delete_entry"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="3"
                        android:layout_marginStart="3dp"
                        android:text="@string/history_button_delete"
                        android:textColor="@color/bg_main"
                        android:textSize="14sp"
                        android:background="@drawable/calculate_button_pressed"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>
                </TableRow>

                <TableRow
                    android:background="@color/bg_main"
                    android:layout_marginTop="6dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/spineId"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_date"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:textColor="@color/actionbar"
                        android:textSize="12sp"
                        android:text="@string/history_date" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_dateTEXT"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/actionbar"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_pageCount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:textColor="@color/actionbar"
                        android:textSize="12sp"
                        android:text="@string/history_page_count" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_pageCountTEXT"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/main_text"
                        android:textSize="12sp" />
                </TableRow>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_main"/>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_pageWidth"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:textColor="@color/actionbar"
                        android:textSize="12sp"
                        android:text="@string/history_page_width" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_pageWidthTEXT"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/main_text"
                        android:textSize="12sp" />
                </TableRow>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_main"/>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_pageHeight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:textColor="@color/actionbar"
                        android:textSize="12sp"
                        android:text="@string/history_page_height" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_pageHeightTEXT"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/main_text"
                        android:textSize="12sp" />
                </TableRow>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_main"/>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_coverWeight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:textColor="@color/actionbar"
                        android:textSize="12sp"
                        android:text="@string/history_cover" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_coverTEXT"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/main_text"
                        android:textSize="12sp" />
                </TableRow>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_main"/>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_textWeight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:textColor="@color/actionbar"
                        android:textSize="12sp"
                        android:text="@string/history_text" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_textTEXT"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/main_text"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow android:background="@color/overflow">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_spine"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:textColor="@color/white_text"
                        android:textSize="12sp"
                        android:text="@string/history_spine_width" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_spineTEXT"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/white_text"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow android:background="@color/overflow">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_weight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:textColor="@color/white_text"
                        android:textSize="12sp"
                        android:text="@string/history_weight" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/history_weightTEXT"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/white_text"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

