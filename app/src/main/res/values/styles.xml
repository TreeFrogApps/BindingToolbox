<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">@color/actionbar</item>
        <item name="android:colorPrimaryDark">@color/actionbar</item>
        <item name="android:textColorPrimary">@android:color/black</item>

        <item name="android:actionBarSize">56dp</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowIcon</item>

    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarText</item>
    </style>

    <style name="ActionBarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyPopupMenu" parent="android:Widget.ListPopupWindow">
        <item name="android:popupBackground">@color/overflow</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="OverFlowIcon">
        <item name="android:src">@drawable/ic_overflow</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="android:foreground">@drawable/card_pressed</item>

    </style>


</resources>


