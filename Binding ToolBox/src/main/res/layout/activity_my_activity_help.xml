                android:layout_height="10dp"
                android:background="@color/bg_main"></LinearLayout>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/main_text"
                    android:text="@string/help_1" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/actionbar"
                    android:text="@string/help_2" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/main_text"
                    android:text="@string/help_3" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/main_text"
                    android:text="@string/help_4" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/main_text"
                    android:text="@string/help_5" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/main_text"
                    android:text="@string/help_6" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/main_text"
                    android:text="@string/help_7" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/actionbar"
                    android:text="@string/help_8" />
            </TableRow>
            <TableRow>
                <TextView
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="7dp"
                    android:textColor="@color/actionbar"
                    android:text="@string/tree_frog_apps"
                    android:textSize="16sp"/>


            </TableRow>


        </TableLayout>
    </ScrollView>


</RelativeLayout>
